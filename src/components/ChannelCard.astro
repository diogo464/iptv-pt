---
import { getChannelById, getChannelLogoPath } from "../scripts/channels";

export interface Props {
    id: string;
    name: string;
    logo: string;
}

// Usage: <ChannelCard id="SIC" name="SIC" logo="/path/to/logo.png" />
const { id, name } = Astro.props as Props;
const channel = getChannelById(id);
---

<a
    href={`channels/${id}`}
    class="video-box flex flex-col items-center text-center text-inherit border border-gray-300 dark:border-gray-700 p-4 rounded-lg transition-shadow hover:shadow-lg dark:bg-gray-800"
>
    <div class="flex items-center justify-center w-full h-32 overflow-hidden bg-gray-200 dark:bg-gray-700 p-2 rounded-md">
        <img
            src={`${getChannelLogoPath(channel)}`}
            alt={name}
            class="max-h-full max-w-full"
        />
    </div>
    <h3 class="text-lg font-semibold mt-4 text-gray-900 dark:text-gray-100">{name}</h3>
</a>
